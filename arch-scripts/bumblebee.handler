#TODO Check different exit status for appropriate feedback
stop() {
   stat_busy "Stopping bumblebee Daemon:"
   
   kill `cat $LOCKFILE 2>&1`
   rm -f $LOCKFILE
   enable_card    # This is needed for shutdown sake
   if [ $? ]; then
      stat_append "Nvidia card ON"
   else
      stat_fail "Failed to switch card ON"
   fi
     #kill `cat $PIDFILE 2>&1` > /dev/null 2>&1
     #while  [ `ps aux |grep xorg.conf.nouveau |wc -l` -ne 1 ]; do
     #     sleep 1
     #     i=`expr $i + 1`
     #     if [ $i -gt 10 ]; then
