     #if [ $? ]; then
     #     stat_append "Graphics card OFF"
     #     stat_done "Bumblebee is out"
     #else
     #     stat_fail "Failed to switch OFF card"
     #fi
     rm_daemon $NAME
     stat_done
}

restart() {
  stop
  sleep 1
  start
}

case "$1" in
  start|enable)
    start
    ;;
  stop|disable)
    stop
    ;;
  restart)
    restart
    ;;
  status)
    ck_status $NAME
  ;;
  cardon)
    enable_card
  ;;
  cardoff)
    disable_card
  ;;
  *)
    echo "usage: $0 {start|stop|enable|disable|restart|status|cardon|cardoff}"  
esac
